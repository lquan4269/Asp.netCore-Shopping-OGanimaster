@model Product
@{
    ViewData["Title"] = "EditProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hi, welcome back!</h4>
                    <p class="mb-1">Validation</p>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Form</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Validation</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Product</h4>
                    </div>
                    @using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                    {
                        @Html.HiddenFor(x => x.ProductId)
                        <div class="card-body">
                            <div class="form-validation">
                                <form class="form-valide" action="#" method="post">
                                    <div class="row">
                                        <div class="col-xl-6">
                                            <div class="form-group row">
                                                @Html.LabelFor(m => m.ProductName, new { @class = "col-md-2 control-label" })
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                @Html.LabelFor(m => m.ProductPrice, new { @class = "col-md-2 control-label" })
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(m => m.ProductPrice, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                @Html.LabelFor(m => m.ProductDescription, new { @class = "col-md-2 control-label" })
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(m => m.ProductDescription, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                @Html.LabelFor(m => m.ProductStatus, new { @class = "col-md-2 control-label" })
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(m => m.ProductStatus, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                @Html.LabelFor(m => m.CatelogyId, new { @class = "col-md-2 control-label" })
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(m => m.CatelogyId, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                @Html.LabelFor(m => m.ProductDiscount, new { @class = "col-md-2 control-label" })
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(m => m.ProductDiscount, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                @Html.LabelFor(m => m.ProductUrlvideo, new { @class = "col-md-2 control-label" })
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(m => m.ProductUrlvideo, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                @Html.LabelFor(m => m.ProductUnit, new { @class = "col-md-2 control-label" })
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(m => m.ProductUnit, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                @Html.LabelFor(m => m.RatingAvg, new { @class = "col-md-2 control-label" })
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(m => m.RatingAvg, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-lg-8 ml-auto">
                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>


                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

