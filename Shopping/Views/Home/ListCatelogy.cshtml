@using Shopping.Models

@{
    var leng = Model.Count;
}
@{
    ViewData["Title"] = "ListCatelogy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">

                @foreach (var item in ViewBag.productlist as List<Product>)
                {
                    var images = item.ProductImages.ToList();
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="/web/img/Product/@images[0].Image">
                            <h5><a href="#">@item.ProductName</a></h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->

<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".oranges">Oranges</li>
                        <li data-filter=".fresh-meat">Fresh Meat</li>
                        <li data-filter=".vegetables">Vegetables</li>
                        <li data-filter=".fastfood">Fastfood</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row featured__filter">
            @foreach (var item in ViewBag.productlist as List<Product>)
            {
                var images = item.ProductImages.ToList();
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">

                        <div class="featured__item__pic set-bg" data-setbg="/web/img/Product/@images[0].Image">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="@Url.Action("cart","Cart", new {id = item.ProductId })"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>

                        <div class="featured__item__text">
                            <h6><a href="@Url.Action("Details","Product", new { id=item.ProductId})">@item.ProductName</a></h6>
                            <h5>@item.ProductPrice VND</h5>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

